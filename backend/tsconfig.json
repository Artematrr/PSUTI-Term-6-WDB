{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@configs/*": ["configs/*"],
      "@configs": ["configs"],
      "@controllers/*": ["controllers/*"],
      "@controllers": ["controllers"],
      "@middlewares/*": ["middlewares/*"],
      "@middlewares": ["middlewares"],
      "@models/*": ["models/*"],
      "@models": ["models"],
      "@routes/*": ["routes/*"],
      "@routes": ["routes"],
      "@services/*": ["services/*"],
      "@services": ["services"],
      "@throws": ["throws"],
      "@throws/*": ["throws/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
